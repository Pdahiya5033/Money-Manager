<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <LinearLayout
        android:id="@+id/daily_tab_contents_upper_linLay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/date_text_dailyTab"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="20dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="hi"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/month_year_text_dailyTab"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:paddingTop="20dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="TextView"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/income_text_dailyTab"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="TextView"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/expense_dailyTab"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="1"
            android:text="TextView"
            android:textSize="15dp"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/daily_tab_second_recView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="60dp" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/daily_tab_contents_upper_linLay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/date_text_dailyTab"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="20dp"
            android:text="hi"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/month_year_text_dailyTab"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:paddingTop="20dp"
            android:text="TextView"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/income_text_dailyTab"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/expense_dailyTab"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="15dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/daily_tab_contents_lower_linLay">
        <TextView
            android:id="@+id/category_text_dailyTab"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:text="gift"
            android:paddingTop="13dp"/>
        <TextView
            android:id="@+id/notes_dailyTab"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:text="zxvc"
            android:textSize="18dp"
            android:paddingTop="13dp"/>

        <TextView
            android:id="@+id/category_expense_dailyTab"
            android:paddingTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="50"
            android:textSize="15dp"/>
    </LinearLayout>
</RelativeLayout>